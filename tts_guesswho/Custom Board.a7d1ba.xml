<Defaults>
    <Panel active="true" />
    <Panel class="main"
        active="false"
        ignoreLayout="true" />
    <Text 
        color="#F0F0F0"
        fontSize="24"/>
    <Text class="tip"
        color="#F0F0F0"
        fontSize="14"/>
</Defaults>

<Panel id="main" class="main"
    position="0 0 -60"
    rotation="0 0 0"
    width="1600"
    height="1600">
    <Text alignment="middleLeft">|</Text>
    <Text alignment="middleRight">|</Text>
    <Text alignment="lowerCenter">------</Text>
    <Text alignment="upperCenter" class="tip"
        ><i><b>TIP:</b> You can use custom keys (numpad by default) for selecting pages 1-9</i></Text>
    <VerticalScrollView
        width="30%"
        height="97%"
        rectAlignment="lowerLeft">
        <VerticalLayout id="category"
            childForceExpandHeight="false"
            childAlignment="UpperCenter" />
    </VerticalScrollView>
    <HorizontalScrollView
        width="70%"
        height="97%"
        rectAlignment="lowerRight">
        <GridLayout id="filterList"
            childAlignment="UpperLeft"
            cellSize="480 64"
            spacing="8 8" />
    </HorizontalScrollView>
</Panel>