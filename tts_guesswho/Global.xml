<Defaults>
    <Button active="false"/>
    <Button class="init" active="true"/>
    <Button class="start" 
        visibility="Host"
        width="200"
        height="60"
        rectAlignment="LowerCenter"
        offsetXY="0 20"
        colors="#282828|#E18D15|#8E8E8E|#8E8E8E"
        textColor="#F0F0F0"
        fontStyle="Bold"
        fontSize="24" />
</Defaults>

<Button id="startGame" class="start init" onclick="onClickStartGame">Start Picking</Button>
<Button id="pickDone" class="start" onclick="onClickPickDone">Start Game</Button>

